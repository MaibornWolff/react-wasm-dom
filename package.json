{
  "name": "react-wasm",
  "collaborators": [
    "Mario Reder <mario.reder@maibornwolff.de>"
  ],
  "description": "React implemented in WebAssembly",
  "version": "0.1.0",
  "license": "(MIT OR Apache-2.0)",
  "scripts": {
    "clean": "rimraf pkg",
    "start": "npm-run-all --parallel build:dev watch",
    "build": "npm run clean && npm run build:wasm",
    "build:wasm": "npm run build:wasm:web && npm run build:wasm:node",
    "build:wasm:web": "wasm-pack build . --release --out-dir pkg --out-name index",
    "build:wasm:node": "wasm-pack build . --release --out-dir pkg/server --out-name index",
    "build:dev": "webpack -d --watch --progress --colors",
    "watch": "nodemon ./dist --watch dist -e js,ts,jsx,tsx,json,wasm,html"
  },
  "repository": {
    "type": "git",
    "url": "https://git.maibornwolff.de/MarioR/react-wasm"
  },
  "dependencies": {
    "react": "^16"
  },
  "devDependencies": {
    "@types/node": "^12.7.11",
    "@types/react": "^16",
    "rimraf": "^3.0.0",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "react": "^16"
  },
  "private": true
}
